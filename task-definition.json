{
  "family": "text-app-task-def",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "<your-ecs-task-execution-role-arn>",
  "taskRoleArn": "<your-ecs-task-role-arn>",
  "containerDefinitions": [
    {
      "name": "flask-api-container",
      "image": "REPLACE_ME_FLASK_IMAGE",
      "essential": true,
      "portMappings": [
        { "containerPort": 5000, "protocol": "tcp" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/text-app",
          "awslogs-region": "<your-region>",
          "awslogs-stream-prefix": "flask"
        }
      }
    },
    {
      "name": "streamlit-ui-container",
      "image": "REPLACE_ME_STREAMLIT_IMAGE",
      "essential": true,
      "portMappings": [
        { "containerPort": 8501, "protocol": "tcp" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/text-app",
          "awslogs-region": "<your-region>",
          "awslogs-stream-prefix": "streamlit"
        }
      }
    }
  ]
}
